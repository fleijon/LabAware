{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Attach",
        "type": "coreclr",
        "request": "attach"
      },
      {
        "name": "debug-hot-reload",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "watch",
        // If you have changed target frameworks, make sure to update the program path.
        "program": "${workspaceFolder}/src/App/LabAware.Host/bin/Debug/net6.0/LabAware.Host.dll",
        "args": [
              "watch",
              "debug",
              "--project",
              ".",
              "--verbose" // Let's us confirm browser connects with hot reload capabilities
          ],
        "cwd": "${workspaceFolder}/src/App/LabAware.Host",
        "stopAtEntry": false,
        // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
        "serverReadyAction": {
            "action": "openExternally",
            "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
            "/Views": "${workspaceFolder}/Views"
        }
      }
    ]
}
